@model SpecificationNeededItemViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid d-flex align-items-start justify-content-center vh-100">
    <div class="text-center">
        <h4>Determine Specification and Price For each Item</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" asp-controller="NeededItem" asp-route-id="@Model.id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="tenderId" class="control-label"></label>
                        <input asp-for="tenderId" class="form-control" readonly />
                        <span asp-validation-for="tenderId" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" placeholder="TYPE"/>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="InitialPrice" class="control-label"></label>
                        <input asp-for="InitialPrice" class="form-control"/>
                        <span asp-validation-for="InitialPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <input type="submit" value="SAVE" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pricevalidtion.js"></script>
}
