@model NewProject.ViewModel.NeededItemViewModel

@{
    ViewData["Title"] = "AddNeededItem";
}
<div class="container-fluid d-flex align-items-start justify-content-center vh-100 mt-10">
    <div class="text-center">
        <h2>Enter Needed Items </h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="AddNeededItem">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group ">
                      @*   <label asp-for="Name" class="control-label"></label> *@
                        <input asp-for="Name" class="form-control" placeholder="Record New Item" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group d-grid gap-2 space">
                        <input type="submit" value="Add ITem" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div class="form-group d-grid gap-2 space">

            <a asp-action="DeterminCommitteeMembers" asp-controller="Committee" class="btn btn-success mt-2"> Done </a>

        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
