@model IEnumerable<NewProject.Models.NeededItem>

@{
    ViewData["Title"] = "ChooseValidItem";
}

<h1>ChooseValidItem</h1>

<table class="table table-bordered">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenderId)
            </th>
            <th>IsValid?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InitialPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenderId)
                </td>
                <td>
                    <div>
                        <a class="btn btn-info" asp-action="Add" asp-route-id="@item.Id" onclick="if(!confirm(' are  u sure ! ')){return false} ">Yes</a> |
                        <a class="btn btn-info">No</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
