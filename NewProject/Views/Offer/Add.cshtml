@model OfferViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="row  d-flex align-items-start justify-content-center vh-100">
    <div class="col-md-4">
        <h4> Add Offer </h4>
        <br />
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group space">
                <label asp-for="VendorId" class="control-label"></label>
                <select asp-for="VendorId" class="form-control" asp-items="@Model.Vendors">
                    <option value="">select Vendor</option>
                </select>
                <span asp-validation-for="VendorId" class="text-danger"></span>
            </div>
            <div class="form-group d-grid gap-2 space">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
